<?xml version='1.0' encoding='ISO-8859-1'?>

<pagetemplate name='main'>
    <uri>http://www.google.com/</uri>
    <version>1.1</version>
    <description>A new forest-green template</description>
    <author>Verde</author>
    <author-uri>http://www.blazingglory.org</author-uri>
    <tags>green, three-column</tags>
    <preview>green-screen.jpg</preview>

    <css src='color.css'/>
    <css src='style.css'/>
    <css src='global-for-template.css'/>
    <images src='images/'/>

    <pagebody>
        <div id="main">
            <header>
                <content id='logo' />
                <nav><content id='links'/></nav>
            </header>
            <main>
                <div id='site_content'>
                    <aside><div id='sidebar'><content id='sidebar' /></div></aside>
                    <div id='content'><content id='content' /></div>
                </div>
            </main>
            <footer id='footer'>
                <content id='footer'>(c) Someone.</content>
            </footer>
        </div>
    </pagebody>
</pagetemplate>
